<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}
    <!-- Main herader -->
    <div class="containter-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Friday</p>
                        <p id="today_date">19 JAN</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span class="temp_real_val">0</span></p>
                            <p><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Code -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () => {
            const weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thusday", "Friday", "Saturday"];

            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];

            let day = document.getElementById('day');
            day.innerText = days;
        };

         const getCurrentTime = () => {

            var months = ["JAN", "FEB", "MAR", "APR", "MAY", "JUNE", "JULY", "AUG", "SEP", "OCT", "NOV", "DEC"];

            let currentTime = new Date();
            var month = months[currentTime.getMonth()];
            var date = currentTime.getDate();
            console.log(month);
            console.log(date);
            let today_date = document.getElementById('today_date');
            today_date.innerText = `${date} ${month}`;
        };



        getCurrentDay();
        getCurrentTime();

    </script>
</body>

</html>